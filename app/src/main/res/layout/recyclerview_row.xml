<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dataPerApp"
    android:layout_width="400sp"
    android:layout_height="80sp"
    android:layout_marginTop="8dp"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/separator">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:contentDescription="App Icon"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/appTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/appName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/appTimeChart"
        android:layout_width="250sp"
        android:layout_height="20sp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <View
        android:id="@+id/verSeparator"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appTimeChart"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconTimer"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Timer Icon"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintStart_toEndOf="@+id/appTimeChart"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_timer_24"
        tools:layout_editor_absoluteX="28dp"
        app:tint="@color/grey" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/appTimeChart"
        app:layout_constraintTop_toBottomOf="@+id/iconTimer"
        tools:text="@tools:sample/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>
